{
    "indentationRules": {
        "increaseIndentPattern": "\\$(define|include|parameters|mode).*"
    },
    "onEnterRules": [
        {
            "beforeText": "(\\$include|\\$parameters|\\$mode).*$",
            "action": {
                "indent": "indent",
            }
        }
    ],
    "comments": {
        // symbol used for single line comment.
        "lineComment": "#",
    },
    // symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["[", "]"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["\"", "\""],
        ["$define", "\n$end"]
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["\"", "\""],
        ["$define my_function", "\n$end"]
    ]
}